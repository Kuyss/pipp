<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
        <TextView
            android:id="@+id/pocetakText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pocetak ankete"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textIsSelectable="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="75dp" />
        <TextView
            android:id="@+id/pocetakText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pritisni Nastavak"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_above="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nastavak"
            android:onClick="pitanja"
            android:textAlignment="center"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ovdje se nalazi opis ankete"
        android:textSize="20sp"
        android:id="@+id/textOpisAnkete"
        android:layout_below="@+id/textView2"

        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opis ankete:"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp" />
</RelativeLayout>
