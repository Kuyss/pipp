<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/loginEdit1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="@string/loginIme"
        android:textSize="20sp"
        android:layout_above="@+id/loginEdit2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_style"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>

    <EditText

        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:id="@+id/loginEdit2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="@string/loginSifra"
        android:inputType="textPassword"
        android:layout_above="@+id/loginButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_style"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    <Button

        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginButton"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:gravity="center"
        android:onClick="login1"
        android:background="@drawable/button_selector"
        android:textColor="@drawable/text_color"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/loginEdit2"
        android:layout_alignEnd="@+id/loginEdit2" />


</RelativeLayout>